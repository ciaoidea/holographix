FROM python:3.11-slim

WORKDIR /app

# System deps for Pillow
RUN apt-get update && apt-get install -y --no-install-recommends libjpeg-dev zlib1g && rm -rf /var/lib/apt/lists/*

COPY requirements.txt pyproject.toml README.md /app/
COPY holo /app/holo
COPY examples /app/examples

RUN pip install --no-cache-dir .

ENTRYPOINT ["python3"]
